<section class="announcement-bar-section announcement-bar-appear" style="padding-top: {{ section.settings.padding_top | default: 12 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 12 }}px;">
  <div class="announcement-bar__inner">
    {% assign messages = section.blocks | where: 'type', 'message' %}
    {% if messages.size > 0 %}
      {% for block in messages %}
        <span class="announcement-bar__text" data-announcement-index="{{ forloop.index0 }}" style="display: {% if forloop.first %}inline{% else %}none{% endif %};">{{ block.settings.text }}</span>
      {% endfor %}
    {% else %}
      <span class="announcement-bar__text">{{ section.settings.announcement_text }}</span>
    {% endif %}
  </div>
</section>
<script>
(function() {
  var interval = {{ section.settings.message_interval | default: 5 }} * 1000;
  var messages = document.querySelectorAll('.announcement-bar__text[data-announcement-index]');
  if (messages.length < 2) return;
  var current = 0;
  setInterval(function() {
    messages[current].style.display = 'none';
    current = (current + 1) % messages.length;
    messages[current].style.display = 'inline';
  }, interval);
})();
</script>

{% stylesheet %}
.announcement-bar-section {
  width: 100%;
  background: #222;
  color: #fff;
  padding: 0;
  margin: 0;
  overflow: hidden;
}
.announcement-bar__inner {
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transform: translateY(-30px);
  animation: announcement-bar-fade-in 1s cubic-bezier(0.4,0,0.2,1) forwards;
}
.announcement-bar__text {
  font-size: 1.1rem;
  font-weight: 500;
  letter-spacing: 0.05em;
  padding: 0 2rem;
  white-space: nowrap;
}
@keyframes announcement-bar-fade-in {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
{% endstylesheet %}

