    {
      "type": "header",
      "content": "Fallback"
    },
    {
      "type": "color",
      "id": "fallback_color",
      "label": "Fallback text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Parallax Image Heading"
    }
  ]
}
{% endschema %}