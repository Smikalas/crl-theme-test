          "label": "Contain"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "cover"
    },
    {
      "type": "range",
      "id": "parallax_speed",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Parallax speed",
      "default": 50
