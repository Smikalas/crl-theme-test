          "label": "None"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        }
      ],
      "default": "none"
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "min": -5,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Letter spacing",
      "default": 0
