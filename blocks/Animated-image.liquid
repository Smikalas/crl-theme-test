    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity",
      "default": 0.3
    },
    {
      "type": "range",
      "id": "overlay_opacity_hover",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity on hover",
      "default": 0.5
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Discover More"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Text size",
      "default": 32
    },
    {
      "type": "range",
